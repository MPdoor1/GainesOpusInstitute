@page
@model Gaines_Opus_Institute_Current.Pages.RegisterModel
@{
}

<div id="registerContainer">
    <br>
    <br>
    <div id="cont1">
        <div id="regForm">
            <form method="post" role="form">

                <h2>Create your Account</h2>

                <label asp-for="user.username">
                    <span asp-validation-for="user.username">UserName *</span>
                    <input asp-for="user.username" class="form-control" />
                    
                </label>

                <label asp-for="user.password">
                    <span asp-validation-for="user.password">Password *</span>
                    <input asp-for="user.password" class="form-control" />
                  
                </label>

                <label asp-for="user.email">
                    <span asp-validation-for ="user.email">Email *</span>
                    <input asp-for="user.email" type="text"/>
                </label>
                
                <label asp-for="user.instrument">
                    <span asp-validation-for="user.instrument">Instrument *</span>
                    <input asp-for="user.instrument" type="text"/>
                    
                </label>

                <div style="height: 20px" ></div>

                <p id="terms">By creating an account you agree to our <a id="termsLink" asp-page="/TermsAndPolicy">Terms & Policy.</a></p>

                <div style="height: 20px" ></div>

                <div id="reg1Btn">
                     <button type="submit" id="button">Sign Up</button>
                </div>
            </form>
        </div>

        <div id="cont3">
            <div id="info3">
                <div id="text3">
                    <h3>If you already have an account, <a id="termsLink" asp-page="/Login">sign in.</a> </h3>
                    <div asp-validation-summary="All" id="errorMsg"></div>
                </div>
                
                <div id="info3Btn">
                     <a id="signinBtn" asp-page="/login">Sign In</a> 
                </div>
            </div>
        </div>
    </div>
</div>


            
